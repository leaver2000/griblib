{
	"name": "GribLib",
	"build": {
		"dockerfile": "../Dockerfile",
		"context": "..",
		"args": { 
			// Options
			// "NODE_VERSION": "lts/*"
		}
	},
	// Configure tool-specific properties.
	"customizations": {
		// Configure properties specific to VS Code.
		"vscode": {
			// Set *default* container specific settings.json values on container create.
			"settings": { 
				// "clang-format.executable": "/usr/bin/clang-format",
				// cspell vscode extension
				"cSpell.files": ["**/*.md", "**/*.py"],
				"cSpell.words": [
					"geopotential",
					"GRIB",
					"Griblib",
					"refd"
				],
				// python
				"python.defaultInterpreterPath": "/opt/venv/bin/python",
				"python.linting.enabled": true,
				"python.linting.pylintEnabled": true,
                "python.formatting.provider": "black",
				"python.formatting.blackPath": "/opt/venv/bin/black",
				"python.linting.flake8Path": "/opt/venv/bin/flake8",
				"python.linting.mypyPath": "/opt/venv/bin/mypy",
				"python.linting.pylintPath": "/opt/venv/pylint"
			},
			// Add the IDs of extensions you want installed when the container is created.
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				// linting
				"mikestead.dotenv",
				"redhat.vscode-yaml",
				"ms-toolsai.jupyter",
				"bungcip.better-toml",
				"shanoor.vscode-nginx",
				"oderwat.indent-rainbow",
				// spell checking
				"streetsidesoftware.code-spell-checker"
			]
		}
	},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "export PYTHONPATH=/workspaces/griblib/griblib",
	"remoteEnv": {
		"PYTHONPATH": "/workspaces/griblib/:${containerEnv:PYTHONPATH}:",
		"JUPYTER_PATH":"/workspaces/griblib/:${containerEnv:JUPYTER_PATH}"
	},
	// Comment out to connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
	"remoteUser": "vscode"
}